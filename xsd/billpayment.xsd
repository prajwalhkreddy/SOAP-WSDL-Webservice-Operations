<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  targetNamespace="http://www.xyz.com/xsd/services/Airlines/2.2"
  xmlns="http://www.xyz.com/xsd/services/Airlines/2.2"
  xmlns:msg="http://www.xyz.com/xsd/types/message/1.2"
elementFormDefault="qualified">

  <xs:import namespace="http://www.phkairways.com/xsd/types/message/1.2"    schemaLocation="/tmp/samplews/01-wsdl2java/xsd/headers.xsd"/>

  <xs:annotation>
    <xs:documentation>
      This schema defines the structures of the input and output message types for the Airline search and booking services.
    </xs:documentation>
    </xs:annotation>
    
    <xs:element name="AirlineSearchResponse">
    <xs:annotation>
      <xs:documentation>
        Contains the Airline Search response given dates, source and destination airports
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" type="msg:ResponseHeader">
        </xs:element>
        <xs:element name="Body">
          <xs:complexType>
            <xs:sequence>
               <xs:element name="FlightNumber" type="xs:string"/>
               <xs:element name="FlightDate" type="xs:date"/>
               <xs:element name="FlightTime" type="xs:time"/>
               <xs:element name="Price" type="xs:float"/>
             </xs:sequence>
           </xs:complexType>
         </xs:element>
        </xs:sequence>
    </xs:complexType>
 </xs:element>
 
 <xs:element name="FlightSearchRequest">
    <xs:annotation>
      <xs:documentation>
        Contains the flight search request information
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Header" type="msg:RequestHeader">
        </xs:element>
        <xs:element name="Body">
          <xs:complexType>
            <xs:sequence>
               <xs:element name="AccountID" type="xs:string"/>
               <xs:element name="PaymentDate" type="xs:date"/>
             </xs:sequence>
           </xs:complexType>
         </xs:element>
        </xs:sequence>
    </xs:complexType>
 </xs:element>
 
</xs:schema>
